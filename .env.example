# =======================================
# SNH Tree API - Environment Configuration
# =======================================
# 
# This is a template file. Copy it to .env and update values:
#   cp .env.example .env
# 
# IMPORTANT: Never commit .env file (contains secrets)
# =======================================

# Build Configuration
BUILD_TARGET=development

# Application
NODE_ENV=development

# API Configuration
API_PORT=3000
API_PREFIX=api

# Database Configuration
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=snh_tree
DATABASE_URL=postgresql://user:password@localhost:5432/snh_tree?schema=public

# CORS Configuration
CORS_ORIGINS=http://localhost:4200

# Swagger Configuration
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs
SWAGGER_TITLE=SNH Tree API
SWAGGER_VERSION=1.0

# Web Configuration
WEB_PORT=4200
WEB_URL=http://localhost:4200
NEXT_PUBLIC_API_URL=http://localhost:3000/api
