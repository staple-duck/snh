{
  "name": "snh",
  "version": "1.0.0",
  "private": true,
  "author": "Anton Goncharenko",
  "license": "ISC",
  "description": "",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "postinstall": "prisma generate",
    "start:prod": "docker compose up --build",
    "start": "docker compose up",
    "stop": "docker compose down",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "db:setup": "npx prisma migrate reset --force",
    "dev:init": "docker compose up -d db && sleep 5 && npm run db:setup",
    "test": "turbo run test",
    "test:all": "docker compose -f docker-compose.test.yml up --build --abort-on-container-exit --exit-code-from test-runner",
    "test:all:cleanup": "docker compose -f docker-compose.test.yml down -v",
    "test:unit": "turbo run test --filter=@snh/api",
    "test:e2e": "API_URL=http://localhost:3000/api turbo run e2e --filter=@snh/api-e2e",
    "lint": "turbo run lint"
  },
  "prisma": {
    "seed": "npx ts-node prisma/seed.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/testing": "^11.1.12",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/dagre": "^0.7.53",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.9",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jest-util": "^30.0.2",
    "jsonc-eslint-parser": "^2.1.0",
    "prettier": "~3.6.2",
    "prisma": "^7.3.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.1",
    "tslib": "^2.3.0",
    "turbo": "^2.3.3",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/swagger": "^11.2.5",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@uiw/react-json-view": "^2.0.0-alpha.41",
    "@xyflow/react": "^12.10.0",
    "axios": "^1.13.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dagre": "^0.8.5",
    "dotenv": "^17.2.3",
    "next": "^16.1.6",
    "pg": "^8.17.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.6.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "tsx": "^4.21.0"
  },
  "packageManager": "npm@10.0.0"
}
